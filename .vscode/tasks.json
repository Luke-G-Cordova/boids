{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "dependsOn": ["Stop Build", "Typescript Build", "Webpack Build"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Stop Build",
      "type": "shell",
      "command": "echo ${input:terminate}",
      "windows": {
        "command": "echo ${input:terminate}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "close": true
      }
    },
    {
      "label": "Typescript Build",
      "type": "shell",
      "command": "npx tsc -w",
      "windows": {
        "command": "npx tsc -w"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "close": true
      }
    },
    {
      "label": "Webpack Build",
      "type": "shell",
      "command": "npx webpack --config webpack.config.js",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ],
  "inputs": [
    {
      "id": "terminate",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "terminateAll"
    }
  ]
}
